namespace DevToolsX.TempConsole;
generator TestDocWiki for IEnumerable<object>;

using DevToolsX.Testing.Selenium;

properties Properties
	Browser Browser = null;
end properties

template OpenPage(string url)
Open page '[url]' in the browser: [GoToUrl(url)]
^
[Image(TakeScreenshot())]
^
<br/>
^
The page title should be [AssertEquals("GoogleX", Properties.Browser.Title)].
end template

function string GoToUrl(string url)
	Properties.Browser.GoToUrl(url);
	return "";
end function

function string TakeScreenshot()
	return Properties.Browser.TakeScreenshot();
end function

function string Image(string filePath)
	return "[[Media:"+filePath+"]]";
end function

template AssertEquals(string expected, string actual)
[if (expected == actual)]
[expected]
[else]
[expected]<span style="background:#FF8080; text-decoration:line-through">[actual]</span>
[end if]
end template

